@model WesamTask.Models.EmployeeVM



@{
    ViewBag.Title = "Delete";
}

<h2>Delete Employee</h2>


<form asp-controller="Employee" asp-action="Delete" method="post" class="form-group">

    <label asp-for="FirstName">First Name</label>
    <input type="text" asp-for="FirstName" disabled class="form-control" />
    <br />
    <label asp-for="LastName">Last Name</label>
    <input type="text" asp-for="LastName" disabled class="form-control" />
    <br />

    <label asp-for="Contact">Contact</label>
    <input type="text" asp-for="Contact" disabled class="form-control" />
    <br />
    <label asp-for="Email"> Email</label>
    <input type="email" asp-for="Email" disabled class="form-control" />
    <br />
    <label asp-for="DateOfBirth">DateOfBirth</label>
    <input type="date" asp-for="DateOfBirth" disabled class="form-control" />
    <br />


    <br />

    <center>
        <input type="submit" value="Delete" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to list</a>

    </center>

</form>